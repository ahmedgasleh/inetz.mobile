<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:inetz.ifinance.app.Views.Base"
             x:Class="inetz.ifinance.app.Views.RegistrationStep1Page"
             Title="RegistrationStep1Page">
    <Grid RowDefinitions=".3*,.3*,.1*,.3*" RowSpacing="10" Padding="10">
        <!-- inputs (bind Text to the viewmodel) -->
        <Border Grid.Row="0" StrokeThickness="0">
            <Grid RowDefinitions=".3*,.3*,.3*" RowSpacing="2" Padding="6">
                <Grid Grid.Row="0" ColumnDefinitions=".1*, .8*" >
                    <Image Grid.Column="0" Source="dotnet_bot.png" Aspect="AspectFill" HeightRequest="45" WidthRequest="45"/>
                    <Entry Grid.Column="1"
                       Text="{Binding PhoneNumber}"
                       Placeholder="Enter Your Phone Number"
                       FontSize="16"
                       HeightRequest="55" />
                </Grid>

                <Grid Grid.Row="1" ColumnDefinitions=".1*, .8*" >
                    <Image Grid.Column="0" Source="dotnet_bot.png" Aspect="AspectFill" HeightRequest="45" WidthRequest="45" />
                    <Entry Grid.Column="1"
                       Text="{Binding Email}"
                       Placeholder="Enter Your Email"
                       FontSize="16"
                       HeightRequest="55" />
                </Grid>

                <Grid Grid.Row="2" ColumnDefinitions=".1*, .8*">
                    <Image Grid.Column="0" Source="dotnet_bot.png" Aspect="AspectFill" HeightRequest="45" WidthRequest="45" />
                    <Entry Grid.Column="1"
                       Text="{Binding Password}"
                       IsPassword="True"
                       Placeholder="Enter Your Password"
                       FontSize="16"
                       HeightRequest="55"  />
                </Grid>
            </Grid>
        </Border>

        <!-- password rules omitted for brevity (same as you had) -->
        <Border Grid.Row="1" StrokeThickness="0" Padding="6,0">
            <!-- ... your labels for password rules ... -->
        </Border>

        <Border Grid.Row="2" StrokeThickness="0" Padding="6,0">
            <Label Text="Fast, secure, always available money transfers to 100+ destinations"
               Style="{StaticResource HeadlineMsg}"
               SemanticProperties.Description="Welcome to dot net Multi platform App U I" />
        </Border>

        <Border Grid.Row="3" StrokeThickness="0">
            <Grid RowDefinitions="Auto,Auto,Auto" Padding="6">
                <!-- Create Account button bound to NextCommand (disabled until CanNext == true) -->
                <!--IsEnabled="{Binding Source={RelativeSource Self}, Path=Command.CanExecute, Mode=OneWay}"-->

                <Button
                Text="Create Account"
                FontSize="24"
                Command="{Binding NextCommand}"
               
                HorizontalOptions="Fill" />

                <!-- small activity indicator -->
                <ActivityIndicator
                IsRunning="{Binding IsBusy}"
                IsVisible="{Binding IsBusy}"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Margin="0,8,0,0" />

                <!-- server / validation error message -->
                <Label
                Text="{Binding ErrorMessage}"
                Grid.Row="3"
                IsVisible="{Binding ErrorMessage, Converter={StaticResource NullOrEmptyToFalseConverter}}"
                Style="{StaticResource ErrorTextStyle}"
                Margin="0,20,0,0" />
            </Grid>
        </Border>
    </Grid>
</views:ContentPageBase>