        <Grid Grid.Row="1" ColumnDefinitions=".25*, .75*" BackgroundColor="White">
            <Border Grid.Column="0" StrokeThickness="0">
                <Image Source="image_placeholder.png" WidthRequest="60"></Image>
            </Border>
            <Grid Grid.Column="1" RowDefinitions=".5*, .5*" Padding="10,12">
                <Label Grid.Row="0" Text="1 416 816 3585" ></Label>
                <Label Grid.Row="1" Text="view profile" ></Label>
            </Grid>
        </Grid>
